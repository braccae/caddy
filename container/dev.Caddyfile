{
    email {env.EMAIL}
	storage file_system /data
	log {
		level INFO
		output stdout
		format json
	}
	servers {
		listener_wrappers {
			proxy_protocol {
				timeout 5s
			}
			tls
		}
	}
	acme_dns cloudflare {env.CF_API_TOKEN}

